<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.Amoba10Controller" style="-fx-background-color: #ecf0f1;">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <HBox alignment="CENTER" spacing="20">
        <VBox alignment="CENTER">
            <Label fx:id="p1DisplayLabel" style="-fx-font-weight: bold;" />
            <Label fx:id="p1ScoreLabel" text="Győzelmek: 0" />
        </VBox>
        <Separator orientation="VERTICAL" />
        <VBox alignment="CENTER">
            <Label fx:id="p2DisplayLabel" style="-fx-font-weight: bold;" />
            <Label fx:id="p2ScoreLabel" text="Győzelmek: 0" />
        </VBox>
    </HBox>

    <Label fx:id="turnLabel" text="X jön" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />

    <GridPane fx:id="gridPane" alignment="CENTER" hgap="2" vgap="2"
              style="-fx-background-color: #bdc3c7; -fx-padding: 2; -fx-border-color: #7f8c8d;">
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Label text="Kör: " /><Label fx:id="korLabel" text="1" />
        <Region prefWidth="50" />
        <Button text="Vissza a menübe" onAction="#handleBack" />
    </HBox>
</VBox>