<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.MainController"
      style="-fx-background-color: #f0f0f0; -fx-border-color: #2c3e50; -fx-border-width: 2;">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text="AMOBA" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <font>
            <Font size="28.0" />
        </font>
    </Label>

    <VBox spacing="10.0" alignment="CENTER">
        <Button minWidth="200.0" prefHeight="45.0" text="Single play"
                onAction="#handleSinglePlayer"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />

        <Button minWidth="200.0" prefHeight="45.0" text="1v1"
                onAction="#handleMultiplayer"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />

        <Button minWidth="200.0" prefHeight="45.0" text="Scoreboard"
                onAction="#handleScoreboard"
                style="-fx-background-color: #f1c40f; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-cursor: hand;" />

        <Label text=" " style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;" />
    </VBox>

    <Button minWidth="200.0" prefHeight="40.0" text="Exit"
            onAction="#handleExit"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand;" />

</VBox>